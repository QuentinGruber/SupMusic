@model SupMusic.Models.Song

@{
    ViewData["Title"] = "Delete";
}


<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Song</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(Song => Song.Name)
        </dt>
    </dl>

    <form asp-action="DeleteSongConfirmed">
        <input type="hidden" asp-for="ID" />
        <input type="hidden" asp-for="Path" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Playlists">Back to List</a>
    </form>
</div>