@{
    ViewData["Title"] = "Create Playlist";
}
@model SupMusic.Models.Playlist;


@using (Html.BeginForm("RegisterNewPlaylist", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <table cellpadding="0" cellspacing="0">
        <tr>
            <th colspan="2" align="center">Create a new playlist !</th>
        </tr>
        <tr>
            <td>Name: </td>
            <td>
                @Html.TextBoxFor(m => m.Name)
            </td>
        </tr>
        <tr>
            <td>Tags: </td>
            <td>
                @Html.TextBoxFor(m => m.Tags)
            </td>
            <td> (eq: jazz,cool)</td>
        </tr>
        <tr>
            <td>Private playlist: @Html.CheckBoxFor(m => m.isPrivate)</td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" value="Submit" class="btn btn-success" /></td>
        </tr>
    </table>
}
